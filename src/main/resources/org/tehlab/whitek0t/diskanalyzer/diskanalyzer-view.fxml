<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="1300.0" prefWidth="1980.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tehlab.whitek0t.diskanalyzer.DiskAnalyzerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="TOP_CENTER" spacing="20.0">
        <children>
            <Button onAction="#onChooseDirButtonClick" text="Choose directory" />
            <Button fx:id="undo" minWidth="150.0" text=".." />
            <TextField fx:id="currentPath" alignment="CENTER" minWidth="500.0" />
        </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </HBox>
    <PieChart fx:id="pieChart" prefHeight="1300.0" prefWidth="1500.0"/>
</VBox>
